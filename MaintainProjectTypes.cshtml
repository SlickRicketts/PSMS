@page
@model _2024PSMS.Pages.ProjectTypes.MaintainProjectTypesModel
@{
    ViewData["Title"] = "2024PSMS";
}

<h1>Maintain Projects Types</h1>

<label>Message:</label>
<label style="color: @Model.MessageColor">@Model.Message</label>
<br />

<table class="table">
    <thead>
        <tr>

            <td><a class="button-add" asp-page="AddProjectType"><span>Add</span></a></td>
            <th><label>Project Type</label></th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ResultIList)
        {
            <tr>
                <td>
                    <a class="button" asp-page="ModifyProjectTypes" asp-route-intProjectTypeID="@item.ProjectTypeID"><span>Modify</span></a>
                    <a class="button-delete" asp-page="DeleteProjectTypes" asp-route-intProjectTypeID="@item.ProjectTypeID" onclick="return confirm('Are you sure you want to delete this Project Type? Click OK to delete it. Click Cancel to keep it.')"><span>Delete</span></a>
                </td>
                <td><label>@item.ProjectType</label></td>
            </tr>
        }
    </tbody>
</table>
