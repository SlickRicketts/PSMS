@page
@model _2024PSMS.Pages.Users.MaintainUsersModel
@{
    ViewData["Title"] = "2024PSMS";
}

<h1>Maintain Users</h1>

<label>Message:</label>
<label style="color: @Model.MessageColor">@Model.Message</label>
<br />

<table class="table">
    <thead>
        <tr>
            <td><a class="button-add"  asp-page="AddUsers"><span>Add</span></a></td>
            <th><label>Last Name</label></th>
            <th><label>First Name</label></th>
            <th><label>Middle Initial</label></th>
            <th><label>Email Address</label></th>
            <th><label>Phone Number</label></th>
            <th><label>Status</label></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ResultIList)
        {
            <tr>
                <td>
                    <a  class="button" asp-page="ModifyUsers" asp-route-intUserID="@item.UserID"><span>Modify</span></a>
                    <a  class="button-delete" asp-page="DeleteUsers" asp-route-intUserID="@item.UserID" onclick="return confirm('Are you sure you want to delete this User? Click OK to delete it. Click Cancel to keep them.')"><span>Delete</span></a>
                </td>
                <td><label>@item.LastName</label></td>
                <td><label>@item.FirstName</label></td>
                <td><label>@item.MiddleInitial</label></td>
                <td><label>@item.EmailAddress</label></td>
                <td><label>@item.PhoneNumber</label></td>
                <td>
                    @{
                        if (item.Status == "A")
                        {
                            <label>Administrator</label>
                        }
                        else if (item.Status == "I")
                        {
                            <label>Instructor</label>
                        }
                        else
                        {
                            <label>Student</label>
                        }
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
